<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AgregarVisitaActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp"
           >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/personadino"
           ></ImageView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/redondear"
                android:padding="10dp"
                android:text="Agregar visita"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                ></TextView>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Tipo de visita"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
               />

            <Spinner
                android:id="@+id/spinnerTipoVisita"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="12dp"
               />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Fecha Visita"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
               />

            <EditText
                android:id="@+id/editTextFechaVisita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="aaaa/mm/dd"
                 />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Peso"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/editTextPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="3.5 kg"
                android:inputType="numberDecimal"
               />


            <TextView
                android:id="@+id/textViewCR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="CondiciÃ³n Respiratoria"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <Spinner
                android:id="@+id/spinnerCondicionRespiratoria"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="12dp"
                 />

            <TextView
                android:id="@+id/textViewUM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Ultimo medicamento"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                 />

            <EditText
                android:id="@+id/editTextUltimoMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Purgante"
                 />

            <TextView
                android:id="@+id/textViewNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="Nota"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/editTextNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="La mascota..."
                />

            <Button
                android:id="@+id/btnConfirmarVisita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="Confirmar"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:background="@drawable/redondear"
                 />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        style="@style/verdeStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imageView_HomeAgregarVisita"
            app:srcCompat="@drawable/huevos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView_ConfiguracionAgregarVisita"
            app:srcCompat="@drawable/caracoladino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>