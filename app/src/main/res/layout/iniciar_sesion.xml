<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/redondear"
                android:gravity="center"
                android:padding="5dp"
                android:paddingBottom="8dp"
                android:text="Iniciar Sesión"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_text_correoIniciarSesio"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="example@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingStart="15dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/textViewInfoCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escribe el correo electónico asociado con tu perfil"
                android:textSize="18dp"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/edit_text_contraseñaIniciarSesion"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="******"
                android:inputType="textPassword"
                android:layout_marginTop="15dp"
                android:paddingStart="15dp"
                />

            <TextView
                android:id="@+id/textViewInfoContraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Escribe tu contraseña"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                />

            <Button
                android:id="@+id/btn_InicioSesionSiguiente"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/redondear"
                android:text="Siguiente"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>